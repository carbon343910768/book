    <select id="findAllBooksInOrder" resultType="edu.bjtu.xxq.model.Book">
        SELECT book.book_id bookId,
        book.book_name bookName,
        book.book_description bookContent,
        book.book_author bookAuthor,
        book.book_publisher bookPublisher,
        book.book_published bookPublished,
        book.book_isbn bookISBN,
        book.book_price bookPrice
        FROM book,order_book WHERE order_book.book_id = book.book_id AND order_book.order_id = #{id}
    </select>

    <select id="findBookNumberInOrder" resultType="int">
        SELECT order_book.book_number
        FROM order_book
        WHERE order_book.book_id = #{bookId}
        AND order_book.order_id = #{orderId}
    </select>

    <insert id="addOrder" >
        INSERT INTO customer_order (order_id, user_id, order_time, order_state)
        VALUES (#{orderId}, #{orderOwner}, #{orderTime}, #{orderState})
    </insert>

    <insert id="addOrderBook" >
        INSERT INTO order_book (order_id, book_id, book_number) VALUES (#{orderId}, #{bookId}, #{bookNumber} )
    </insert>



</mapper>